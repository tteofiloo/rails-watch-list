<h1><%= @list.name %></h1>
<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.comment %></p>
  <p><%= image_tag bookmark.movie.poster_url, width: 100 %></p>
  <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?" } %>
<% end %>
<p><%= link_to 'Back to lists', lists_path %></p>
<p><%= link_to 'Add a movie', new_list_bookmark_path(@list) %></p>
